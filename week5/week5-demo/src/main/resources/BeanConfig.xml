<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.2.xsd http://www.springframework.org/schema/aop https://www.springframework.org/schema/aop/spring-aop.xsd">

    <bean id="XmlExample" class="com.mjstudy.example.xml.XmlExample"></bean>


    <!--    学校类相关配置-->
    <bean id="student1" class="com.mjstudy.example.school.Student">
        <property name="id" value="1"/>
        <property name="name" value="1"/>
    </bean>
    <bean id="student2" class="com.mjstudy.example.school.Student">
        <property name="id" value="2"/>
        <property name="name" value="2"/>
    </bean>

    <bean id="class1" class="com.mjstudy.example.school.MyClass">
        <property name="students">
            <list>
                <ref bean="student1"/>
                <ref bean="student2"/>
            </list>
        </property>
    </bean>

    <bean id="school1" class="com.mjstudy.example.school.School">
        <property name="myClasses">
            <list>
                <ref bean="class1"/>
            </list>
        </property>
    </bean>

</beans>